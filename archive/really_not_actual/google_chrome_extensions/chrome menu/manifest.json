{
  "manifest_version": 2,
  
  "name": "Omnibox",
  "description": "Kiedy Wojtek znajduje zadanie po Marku a Paweł znowu musi odwalać brudną robotę...",
  "version": "1.1",
  
  "browser_action": {
    "default_icon": "16.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "16.png",
    "48": "48.png",
	"128": "128.png"
  },

  "permissions": [
    "storage",
    "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["myscript.js"],
	  "css": ["mycss.css"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}