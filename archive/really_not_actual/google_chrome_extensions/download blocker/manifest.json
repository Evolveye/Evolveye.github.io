{
  "manifest_version": 2,
  
  "name": "Download blocker",
  "description": "Moje skromne API",
  "version": "1.1",
  
  "browser_action": {
    "default_icon": "16.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "16.png",
    "48": "48.png",
	"128": "128.png"
  },

  "permissions": [
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}